/*-------------------------------------------*/
.top_nav-menu
  background-color: $clrGoldBackground

.nav-link-menu
  color: $clrGoldText
  border-color: $clrTransparent100

  &:hover
    border-color: $clrGoldText

/*-------------------------------------------*/
/*-------------------------------------------*/
/*-------------------------------------------*/
.days_cal--inner
  color: $clrGoldText
  border-color: $clrTransparent100

.days_cal--inner_selected
  border-left-color: $clrGoldText
  border-right-color: $clrGoldText

