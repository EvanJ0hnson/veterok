
$clrGoldText = #2d2d2d
$clrGoldBackground = #f6eede
$clrGoldTextShadow = rgba(255,255,255,.25)
$clrGoldHeading = #f0f0f0
$clrGoldHeadingBackground = rgba(45,45,45,.75)

$clrRed = #911616
$clrRedText = #f0f0f0
$clrRedBoxShadowTop = #2d2d2d
$clrRedBoxShadowBottom = #2d2d2d
$clrRedTextShadow = #d25151

$clrGreyText = #f0f0f0
$clrGreyBackground = #2d2d2d

$clrTransparent100 = rgba(0, 0, 0, 0)
$clrTransparent70 = rgba(0, 0, 0, .3)

.gold
  color: $clrGoldText
  background-color: $clrGoldBackground
  text-shadow: 1px 1px 1px $clrGoldTextShadow
  background: $clrGoldBackground url(../../img/bgbot.png) bottom repeat-x

.gold--noBgImage
  color: $clrGoldText
  background-color: $clrGoldBackground
  text-shadow: 1px 1px 1px $clrGoldTextShadow
  background: $clrGoldBackground

.gold__heading
  color: $clrGoldHeading
  text-shadow: none

.gold__heading-background
  background-color: $clrGoldHeadingBackground

.red
  color: $clrRedText
  background-color: $clrRed

.grey
  color: $clrGreyText
  background-color: $clrGreyBackground
/*-------------------------------------------*/
