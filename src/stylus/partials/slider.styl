/*<Flexslider>----------------------------------------------------------------*/
.flex-direction-nav li {
  position: absolute;
  top: 0;

  width: 40px;
  height: 100%;
}

.flex-direction-nav li:first-child {
  left: 0;
}

.flex-direction-nav li:last-child {
  right: 0;
}

.flex-direction-nav li a {
  display: block;
  overflow: hidden;

  width: 100%;
  height: 100%;
  
  outline: none;

  transition: background-color .25s ease;
  white-space: nowrap;
  text-indent: 100%;
  
  &:hover {
    background-color: rgba(50, 50, 52, .025);
  }
}


.flex-direction-nav li a::before,
.flex-direction-nav li a::after {
  position: absolute;
  top: 55%;
  left: 50%;

  width: 4px;
  height: 15px;
  /* left and right arrows in css only */

  content: '';

  background-color: white;
}

.grey-nav .flex-direction-nav li a::before,
.grey-nav .flex-direction-nav li a::after {
  background-color: grey;
}

