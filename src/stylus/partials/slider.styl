/**
 * Flexslider customization
 */
@font-face {
  font-family: 'flexslider-icon';
  src: url('../fonts/flexslider-icon.eot');
  src: url('../fonts/flexslider-icon.eot?#iefix') format('embedded-opentype'), url('../fonts/flexslider-icon.woff') format('woff'), url('../fonts/flexslider-icon.ttf') format('truetype'), url('../fonts/flexslider-icon.svg#flexslider-icon') format('svg');
  font-weight: normal;
  font-style: normal;
}

.flex-direction-nav {
  $size = 2rem;
  
  & > li > a {
    width: $size;
    height: @width;

    opacity: 1;

      &:before {
        font-size: $size;
        text-shadow: none;
        
        color: #fff;
      }
  }
  
  & .flex-prev {
    left: 5px;
  }
  
  & .flex-next {
    right: 5px;
  }
}

.grey-nav .flex-direction-nav {
  & > li > a {
    &:before {
      color: grey;
    }
  }
}
/**
 * Flexslider customization
 */

/**
 * Slider: Top
 */
.cd-topslider-wrapper {
  margin: 0;
}

.cd-topslider {
  position: relative;
  height: 90vh;
  
  & > div {
    position: absolute;
    top: 0;
    left: 0;
    
    height: 100%;

    background-position: center;
    background-size: cover;
  }
}
/**
 * Slider: Top
 */

/**
 * Slider: Calendar
 */
.cd-calendar-wrapper {
  display: inline-block;
  position: relative;
  z-index: 1;

  width: 65%;
  max-width: 482.25px;
  min-height: 330px;
  margin: 0 auto;
  margin-bottom: 15px;
  padding-right: 50px;
  padding-left: 50px;
}

.cd-calendar > li {
  position: absolute;

  opacity: 0;
}

.cd-calendar > li:first-child {
  position: relative;

  opacity: 1;
}
/**
 * Slider: Calendar
 */

/**
 * Slider: Photo
 */
.cd-photoslider-wrapper {
  position: relative;

  z-index: 1;

  margin-top: 0;
  margin-right: auto;
  margin-bottom: 0;
  margin-left: auto;
}

@media only screen and (min-width: 768px) {
  .cd-photoslider-wrapper {
    margin-top: 0;
    margin-right: auto;
    margin-bottom: 0;
    margin-left: auto;
  }
}

.cd-photoslider {
  text-align: center;

  color: white;
}

.cd-photoslider:after {
  display: table;
  clear: both;

  content: '';
}

.cd-photoslider > div {
  position: absolute;

  opacity: 0;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: contain;
}

.cd-photoslider.main--slider > div {
  height: 30rem;
}

.cd-photoslider.popup--slider > div {
  height: 100vh;
}

.cd-photoslider > div:first-child {
  position: relative;

  opacity: 1;
}
/**
 * Slider: Photo
 */

/**
 * Slider: Reviews
 */
.cd-testimonials-wrapper {
  position: relative;
  z-index: 1;

  width: 100%;
  margin-top: 0;
  margin-right: auto;
  margin-bottom: 0;
  margin-left: auto;
  padding: 20px 40px 20px;
  /*max-width: 768px;*/

  background-color: #39393c;
}

.cd-testimonials-wrapper::after {
  font-family: 'PT Serif', serif;
  font-size: 70px;
  font-size: 4.375rem;

  position: absolute;
  top: 10px;
  left: 0;
  /* visible on big devices only */

  display: none;

  width: 50px;
  height: 50px;
  margin-left: -25px;
  padding-top: 8px;
  
  /* quotation mark */
  content: '\201C';
  text-align: center;

  color: white;
  background: rgba(32, 32, 34, .9);
}
@media only screen and (min-width: 768px) {
  .cd-testimonials-wrapper {
    margin-top: 0;
    margin-right: auto;
    margin-bottom: 0;
    margin-left: auto;
    padding: 64px 50px 64px;
  }
}
@media only screen and (min-width: 1170px) {
  .cd-testimonials-wrapper::after {
    /* quotation mark visible */
    display: block;
  }
}

.cd-testimonials {
  text-align: center;

  color: white;
}

.cd-testimonials:after {
  display: table;
  clear: both;

  content: '';
}
.cd-testimonials > li {
  position: absolute;

  opacity: 0;
}
.cd-testimonials > li:first-child {
  position: relative;

  opacity: 1;
}
.cd-testimonials p {
  font-family: 'PT Serif', serif;
  font-size: 1rem;

  margin-bottom: 1rem;
  padding: 0 14px;

  text-align: left;
  text-transform: none;

  color: #f0f0f0;
  text-shadow: -1px -1px 0 #463d37;
}
@media only screen and (min-width: 768px) {
  .cd-testimonials p {
    font-size: 1rem;
  }
}
@media only screen and (min-width: 1170px) {
  .cd-testimonials p {
    font-size: 1rem;
  }
}

.cd-author {
  font-family: 'Open Sans Condensed', sans-serif;

  float: right;

  vertical-align: middle;

  text-shadow: -1px -1px 0 #463d37;
}

.cd-author .cd-author-info li {
  padding-right: .5rem;
  padding-bottom: .5rem;

  text-align: right;
}

.cd-author .cd-author-info li:first-child {
  font-size: .9rem;

  color: #f0f0f0;
}

.cd-author .cd-author-info li:last-child {
  font-size: .8rem;

  color: #6b6b70;
}

@media only screen and (min-width: 768px) {
  .cd-author .cd-author-info li:first-child {
    font-size: .9rem;
  }
  .cd-author .cd-author-info li:last-child {
    font-size: .8rem;
  }
}

@media only screen and (min-width: 1170px) {
  .cd-author .cd-author-info li:first-child {
    font-size: .9rem;
  }
  .cd-author .cd-author-info li:last-child {
    font-size: .8rem;
  }
}
