/*<Reviews>-------------------------------------------------------------------*/

.cd-testimonials-wrapper {
  position: relative;
  z-index: 1;

  width: 100%;
  margin-top: 0;
  margin-right: auto;
  margin-bottom: 0;
  margin-left: auto;
  padding: 20px 40px 20px;
  /*max-width: 768px;*/

  background-color: #39393c;
}

.cd-testimonials-wrapper::after {
  font-family: 'PT Serif', serif;
  font-size: 70px;
  font-size: 4.375rem;

  position: absolute;
  top: 10px;
  left: 0;
  /* visible on big devices only */

  display: none;

  width: 50px;
  height: 50px;
  margin-left: -25px;
  padding-top: 8px;
  
  /* quotation mark */
  content: '\201C';
  text-align: center;

  color: white;
  background: rgba(32, 32, 34, .9);
}
@media only screen and (min-width: 768px) {
  .cd-testimonials-wrapper {
    margin-top: 0;
    margin-right: auto;
    margin-bottom: 0;
    margin-left: auto;
    padding: 64px 50px 64px;
  }
}
@media only screen and (min-width: 1170px) {
  .cd-testimonials-wrapper::after {
    /* quotation mark visible */
    display: block;
  }
}

.cd-testimonials {
