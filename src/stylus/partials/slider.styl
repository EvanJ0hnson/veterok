/*<topslider>---------------------------------------------------------------*/
.cd-topslider-wrapper {
  position: relative;

  z-index: 1;

  margin-top: 0;
  margin-right: auto;
  margin-bottom: 0;
  margin-left: auto;
}

.cd-topslider {
  text-align: center;

  color: white;
}

.cd-topslider:after {
  display: table;
  clear: both;

  content: '';
}

.cd-topslider > div {
  position: absolute;

  height: 86vh;

  opacity: 0;
  background: no-repeat center center;
  background-size: cover;
}

.cd-topslider > div:first-child {
  position: relative;

  opacity: 1;
}
/*</topslider>--------------------------------------------------------------*/

