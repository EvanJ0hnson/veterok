  /**
   * Cart
   */
.cart-table {
  width: 100%;
}

.cart-table td {
  padding: 0 5px;
  
  font-size: 1rem;
  text-align: left;
}

.cart-table__caption td {
  font-weight: 700;

  padding: 5px 5px 20px 5px;
}

.cart-table__row {
  &:nth-child(odd) {
    background-color: rgba(0, 0, 0, .015);
  }
}

.cart-table__row td {
  padding: 10px 0;
  
  &:last-child td {
    padding-bottom: 0;
  }
}

.cart-footer {
  padding: 15px 0 25px 0;

  text-align: right;
}

.cart-footer__total {
  font-size: 1rem;
}
