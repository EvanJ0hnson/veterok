form__placeholder--focus()
  opacity: 0;
  transition: opacity .25s ease;
/*
MIXINS
*****/

.form-booking {
  text-align: right;
}

.form-booking__input {
  display: block;
  width: 100%;
  
  margin: 0 0 10px 0;
  padding: 10px;
  
  outline: none;
  background: none;

  font-family: 'PT Serif', serif;
  font-size: 1rem;
  letter-spacing: .035rem;

  border: 1px dashed grey;

  color: rgba(45,45,45,.75);
  
  form-booking__input-placeholder() {
    color: rgba(45, 45, 45, .75);
  }
  
  &::-webkit-input-placeholder {
    form-info__input-placeholder()
  }

  &::-moz-placeholder {
    form-info__input-placeholder()
  }

  &:-moz-placeholder {
    form-info__input-placeholder()
  }

  &:-ms-input-placeholder {
    form-info__input-placeholder()
  }

  &:focus::-webkit-input-placeholder {
    form__placeholder--focus()
  }

  &:focus::-moz-placeholder {
    form__placeholder--focus()
  }

  &:focus:-moz-placeholder {
    form__placeholder--focus()
  }

  &:focus:-ms-input-placeholder {
    form__placeholder--focus()
  }
}

.form-review__message {
  width: 100%;
  height: 250px;
  
  margin-bottom: 10px;
  padding: 10px;

  resize: none;
  outline: none;
  background: none;
  
  border: 1px dashed #f0b6b6;
  
  font-family: 'PT Serif', serif;
  font-size: 1rem;
  letter-spacing: .035rem;
  
  color: #f0f0f0;
  
  form-review__message-placeholder() {
    color: #f0f0f0;
  }
  
  &::-webkit-input-placeholder {
    form-review__message-placeholder()
  }
  
  &::-moz-placeholder {
    form-review__message-placeholder()
  }

  &:-moz-placeholder {
    form-review__message-placeholder()
  }

  &:-ms-input-placeholder {
    form-review__message-placeholder()
  }
  
  &:focus::-webkit-input-placeholder {
    form__placeholder--focus()
  }

  &:focus::-moz-placeholder {
    form__placeholder--focus()
  }

  &:focus:-moz-placeholder {
    form__placeholder--focus()
  }

  &:focus:-ms-input-placeholder {
    form__placeholder--focus()
  }
}
